/* pages/orderdetail/orderdetail.wxss */
.address {
  border-bottom-style:dashed;
  margin: 0px 20rpx;
  height: 150rpx;
}
.name-number {
  display: flex;
  margin: 14rpx 0rpx;
  height: 70rpx;
}
.name {
  padding-left: 20rpx;
  margin-right: 40rpx;
  font-size: 66rpx;
  line-height: 70rpx;
}
.number {
  font-family: serif;
  font-weight: bold;
  font-size: 44rpx;
  line-height: 70rpx;
}
.address-x {
  display: flex;
  margin-bottom: 22rpx;
}
.default {
  margin-left: 20rpx;
  width: 76rpx;
  height: 38rpx;
  border-radius: 20rpx;
  background-color: red;
  font-size: 28rpx;
  line-height: 38rpx;
  text-align: center;
}
.address-detail {
  font-size: 30rpx;
  margin-left: 14rpx;
}
.cart-list {
  display: flex;
  width: 710rpx;
  height: 230rpx;
  margin: 10px;
  border-bottom: 1px dashed black;
}
.carts-item-image {
  width: 160rpx;
  height: 210rpx;
  padding-right: 20rpx;
}
.item-title {
  font-weight: bold;
  font-size: 38rpx;
  height: 105rpx;
  width: 550rpx;
}
.carts-item-number {
  display: flex;
  justify-content: space-between;
  padding-top: 50rpx;
}
.item-price {
  color: red;
  font-size: 42rpx;
  height: 105rpx;
}
.item-num {
  margin-right: 40rpx;
}
.footer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}
.confirm {
  background-color: red;
  color: white;
  width: 250rpx;
  font-size: 38rpx;
  line-height: 100rpx;
  text-align: center;
}
.pricedetail {
  width: 500rpx;
  height: 100%;
}
.price-content {
  margin-left: 14rpx;
  font-size: 48rpx;
  line-height: 100rpx;
}