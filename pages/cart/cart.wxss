.carts-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120px;
  border-width: 0 0 1px 0;
  border-bottom-style: solid;
  border-color: gray;
}
.carts-item-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 120px;
}
.carts-item-title {
  display: flex;
  flex-direction: row;
  margin-top: 13px;
  margin-left:13px;
  width:202px;
  justify-content: space-between;
}
.change-box {
  display: flex;
  margin-top: 40px;
  justify-content: space-between;
  margin-left:13px;
}
.numberchange {
  display: flex;
  width: 90px;
  justify-content: space-between;
}
.carts-item-delete {
  display: flex;
  justify-content: flex-end;
}
.carts-item-icon {
  margin: 13px;
}
.carts-item-image {
  width:80px;
  height:80px;
}
.empty {
  width: 500rpx;
  height: 400rpx;
  margin: 200rpx 125rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.empty image {
  width: 240rpx;
  height: 240rpx;
}
.empty view:nth-child(2) {
  color: #666666;
  font-size: 14px;
}
.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 50px;
  border-bottom: 1px #ccc solid;
  border-top: 1px #ccc solid;
}
.xiadan {
  background-color: #ef4136; 
  width: 250rpx;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 18px;
}
.select {
  width: 250rpx;
  height:100rpx;
  display: flex;
  align-items: center;
}
.totalprice {
  width: 250rpx;
  height: 100rpx;
  text-align: center;
  margin-left: 50rpx;
  line-height: 100rpx;
}
